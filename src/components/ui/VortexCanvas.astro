<div class="relative h-full w-full p-4">
	<div class="absolute h-full w-full inset-0 z-0 bg-transparent flex items-center justify-center">
		<div class="vortex-effect"></div>
		<canvas id="particles-container" class="absolute"></canvas>
	</div>
	<div class="relative z-10">
		<slot />
	</div>
</div>

<style>
	.vortex-effect {
		position: absolute;
		width: 250px;
		height: 250px;
		background: radial-gradient(
			circle at center,
			rgba(99, 102, 241, 0.15),
			rgba(99, 102, 241, 0.1) 40%,
			transparent 70%
		);

		animation: rotate 20s linear infinite;
		filter: blur(50px);
	}

	.vortex-effect::before,
	.vortex-effect::after {
		content: '';
		position: absolute;
		inset: 0;
		border-radius: 50%;
		background: conic-gradient(
			from 0deg,
			rgba(99, 102, 241, 0.2),
			rgba(168, 85, 247, 0.2),
			rgba(99, 102, 241, 0.2)
		);
		animation: rotate 2s ease-in-out infinite reverse;
	}

	.vortex-effect::after {
		filter: blur(30px);
		opacity: 0.7;
	}

	@keyframes rotate {
		from {
			transform: rotate(0deg) scale(1);
		}

		to {
			transform: rotate(360deg) scale(1.05);
		}
	}

	#particles-container {
		overflow: hidden;
		pointer-events: none;
	}

	.particle {
		position: absolute;
		background: rgba(99, 102, 241, 0.3);
		border-radius: 50%;
		pointer-events: none;
	}
</style>
