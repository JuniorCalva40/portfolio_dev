---
import { Icon } from 'astro-icon/components'
import Title from './Title.astro'

interface Props {}
---

<article
	class="flex border border-white/20 w-72 rounded-lg p-2 justify-center items-center flex-col"
>
	<figure class="w-full">
		<img
			class="object-cover object-center rounded-lg"
			src="https://miro.medium.com/v2/resize:fit:740/0*4HxmoUyeXbMQDOtu.png"
			alt="blog"
		/>
	</figure>
	<div class="flex px-2 mt-3 w-full justify-between items-center">
		<Icon name={'ui/calendar'} color={'#fff'} size={20} />
		<p class="text-white text-sm">21 de septiembre, 2024</p>
	</div>
	<div class="px-2 mt-2">
		<h2 class="my-1 text-white">Trucos en para State Managment in Nextjs</h2>
		<p class="text-muted text-xs">
			Lorem ipsum dolor sit amet, consectetur adipisicing elit. Architecto, blanditiis?
		</p>
	</div>
</article>
