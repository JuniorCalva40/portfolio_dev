---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'

interface Props {
	img: string
	title: string
	description: string
	published_at: string
	slug: string
}

const { img, title, description, published_at, slug } = Astro.props
---

<article
	class="flex border border-white/20 w-full md:w-72 rounded-lg p-4 justify-center items-center flex-col hover:border-white/40 transition-all duration-300 bg-gradient-to-b from-white/5 to-transparent backdrop-blur-sm"
>
	<figure class="w-full overflow-hidden rounded-lg">
		<Image
			transition:name="fade"
			width={300}
			height={300}
			class="object-contain object-center rounded-xl w-full hover:scale-105 transition-transform duration-300"
			src={img}
			alt="blog"
		/>
	</figure>
	<div class="flex px-2 mt-4 w-full justify-between items-center opacity-80">
		<Icon name={'ui/calendar'} color={'#fff'} size={20} />
		<p class="text-white text-sm font-light">{published_at}</p>
	</div>
	<div class="px-2 mt-3">
		<h2 class="my-2 text-white text-lg font-semibold hover:text-blue-400 transition-colors">
			<a href={`/posts/${slug}`}>{title}</a>
		</h2>
		<p class="text-white/60 text-sm leading-relaxed">
			{description}
		</p>
	</div>
</article>
