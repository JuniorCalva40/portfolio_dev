---
type Variant = 'gradient' | 'solid'

interface Props {
	id?: string
	class?: string
	variant: Variant
}

const { variant, class: className, id } = Astro.props

const buttonVariants: Record<Variant, string> = {
	gradient:
		'bg-gradient-to-r z-10  py-2 from-accent to-primary px-4 rounded-full text-sm text-white',
	solid: 'bg-solid py-2 px-3 rounded-full text-sm text-black'
}
---

<button id={id} class:list={[buttonVariants[variant], className]}><slot /></button>
