---
import netmall from '../../assets/imgs/netmall2.webp'
import rever from '../../assets/imgs/rever.png'
import CardProyect from '../ui/CardProyect.astro'
import Title from '../ui/Title.astro'
import SectionContainer from './SectionContainer.astro'
---

<SectionContainer id="projects" margin class="my-24">
	<Title variant="Title">Proyectos</Title>
	<Title variant="description">Proyectos destacados: de la idea a la implementaci√≥n</Title>
	<div
		class="grid grid-rows-3 md:grid-cols-4 md:h-[60%] h-[42rem] md:grid-rows-2 gap-10 md:gap-3 mt-8"
	>
		<CardProyect
			class="md:col-span-2 row-span-1 md:row-span-full place-content-center"
			img={rever}
		/>
		<CardProyect class="md:col-span-2 row-span-1" img={netmall} />
		<CardProyect class="md:col-span-2" img={netmall} />
	</div>
</SectionContainer>
