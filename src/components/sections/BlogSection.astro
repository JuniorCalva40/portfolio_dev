---
import CardBlog from '../ui/CardBlog.astro'
import Title from '../ui/Title.astro'
import SectionContainer from './SectionContainer.astro'
import { getCollection } from 'astro:content'

const posts = await getCollection('posts')
---

<div id="blog" class="bg-gradient-to-b from-secondary via-violet-950/50 to-secondary py-1">
	<SectionContainer margin>
		<Title variant="Title">Blog</Title>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
			{posts.map((post) => <CardBlog {...post.data} slug={post.slug} />)}
		</div>
	</SectionContainer>
</div>
