---
import Title from '../ui/Title.astro'
import VortexCanvas from '../ui/VortexCanvas.astro'
import SectionContainer from './SectionContainer.astro'
import TechBadge from './TechBadge.astro'
import { getLangFromUrl, useTranslations } from '../../i18n/utils'
import type { SkillName } from '../../types/project'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

const SkillsFrontend: SkillName[] = [
	'Frontend:',
	'Next.js',
	'React',
	'Tailwind',
	'Astro',
	'HTML',
	'CSS',
	'Javascript'
] as const

const SkillsBackend: SkillName[] = [
	'Backend:',
	'Node',
	'Express',
	'Prisma',
	'Typescript',
	'Python',
	'FastAPI'
] as const

const SkillsDatabases: SkillName[] = ['Databases:', 'PostgreSQL', 'Mongo', 'MySQL'] as const

const OtherTools: SkillName[] = ['Other Tools:', 'Docker', 'Git', 'Figma'] as const
---

<SectionContainer id="skills" margin={false} class="my-24">
	<Title variant="Title">Skills</Title>
	<Title variant="description">{t('skills.subtitle')} </Title>

	<div class="relative w-full h-auto center flex-col p-6">
		<VortexCanvas>
			<div
				class="my-6 flex justify-center items-start md:items-center flex-wrap flex-row md:flex-col gap-4"
			>
				<ul class="center flex-col md:flex-row flex-wrap gap-4">
					{SkillsFrontend.map((name) => <TechBadge {name} />)}
				</ul>
				<ul class="center flex-col md:flex-row flex-wrap gap-4">
					{SkillsBackend.map((name) => <TechBadge {name} />)}
				</ul>
				<ul class="center flex-col md:flex-row flex-wrap gap-4">
					{SkillsDatabases.map((name) => <TechBadge {name} />)}
				</ul>
				<ul class="center flex-col md:flex-row flex-wrap gap-4">
					{OtherTools.map((name) => <TechBadge {name} />)}
				</ul>
			</div>
		</VortexCanvas>
	</div>
</SectionContainer>
